{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "types": ["react-native", "jest"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "incremental": true,
    "paths": {
      "src/*": ["*"],
      // "components/*": ["components/*"],
      // "svg/*": ["assets/svg/*"],
      // "images/*": ["assets/images/*"]
    },
    "baseUrl": "src",
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
